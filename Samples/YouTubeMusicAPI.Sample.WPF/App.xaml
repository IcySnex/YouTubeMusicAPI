<Application
    x:Class="YouTubeMusicAPI.Sample.WPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:YouTubeMusicAPI.Sample.WPF.Converters"
    xmlns:local="clr-namespace:YouTubeMusicAPI.Sample.WPF"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    StartupUri="Views/MainWindow.xaml">
    <Application.Resources>

        <sys:Boolean x:Key="True">True</sys:Boolean>
        <sys:Boolean x:Key="False">False</sys:Boolean>

        <conv:BoolToStringConverter x:Key="BoolToStringConverter" />
        <conv:SongVideoArtistsToStringConverter x:Key="SongVideoArtistsToStringConverter" />
        <conv:UrlToBrushConverter x:Key="UrlToBrushConverter" />
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <conv:NullToBoolConverter x:Key="NullToBoolConverter" />
        <conv:StreamingDataToStringConverter x:Key="StreamingDataToStringConverter" />

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="{x:Static SystemColors.ControlTextBrush}" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="{x:Static SystemColors.WindowTextBrush}" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8,2" />
            <Setter Property="Foreground" Value="{x:Static SystemColors.WindowTextBrush}" />
        </Style>

        <Style TargetType="Rectangle">
            <Setter Property="Fill" Value="{x:Static SystemColors.ControlDarkBrush}" />
        </Style>

    </Application.Resources>
</Application>
